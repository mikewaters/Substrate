{
  // Project Configuration
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Python Configuration
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "python.envFile": "${workspaceFolder}/.dev.env",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.formatting.provider": "none",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.formatOnSave": true
  },
  "python.analysis.enablePytestSupport": true,

  // GitHub Copilot Configuration
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "python": true
  },
  "github.copilot.advanced": {
    "debug.overrideEngine": "codex"
  },

  // Editor Configuration
  "editor.rulers": [120],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,

  // Workspace-specific GitHub Copilot Instructions
  "github.copilot.chat.welcomeMessage": "Hello! I'm GitHub Copilot. I've been configured for this Substrate ontology project. I understand:\n\n• This is a LinkML-based ontology project with PostgreSQL/TerminusDB\n• Use `uv` for Python dependency management\n• Follow test-driven development with 90%+ coverage\n• Use Pydantic for models, FastAPI for APIs, pytest for testing\n• Code style: 120 char lines, type hints everywhere, no placeholders\n\nRefer to @AGENTS.md for complete guidelines. How can I help?",

  // File Associations
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "Justfile": "makefile",
    "*.md": "markdown"
  },

  // Git Configuration
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // Exclude patterns
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/logs": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/htmlcov": true
  },

  // Terminal Configuration
  // annoying and i hope no longer needed
  //"terminal.integrated.env.osx": {
  //  "UV_PROJECT_ENVIRONMENT": ".venv"
  //},
  "terminal.integrated.copyOnSelection": true,

  // Extension-specific settings for better Copilot integration
  "markdown.preview.fontSize": 14,
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
},
"cSpell.words": [
    "dataclasses",
    "ilike",
    "jsonschema",
    "lifeos",
    "linkml",
    "litellm",
    "notin",
    "pydantic",
        "docstore",
        "hardlink",
        "pipestore",
        "wikilink",
        "wikilinks"
],
"sqltools.connections": [
    {
        "previewLimit": 50,
        "driver": "SQLite",
        "name": "substrate-ontologydb",
        "database": ".data/ontology.db"
    }
],
"sqltools.useNodeRuntime": true,
"cSpell.enabled": false
}
